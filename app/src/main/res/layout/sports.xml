<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/hello_message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="22sp" />


    <ImageView
        android:id="@+id/basketball_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:onClick="basketballScreen"
        app:srcCompat="@drawable/basketball" />

    <ImageView
        android:id="@+id/football_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:onClick="footballScreen"
        app:srcCompat="@drawable/soccer" />

    <ImageView
        android:id="@+id/football_image_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:onClick="runScreen"
        app:srcCompat="@drawable/baseball" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="goToHomeScreen"
        android:text="Go back" />


</LinearLayout>